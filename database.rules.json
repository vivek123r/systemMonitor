{
  "rules": {
    "devices": {
      "$device_id": {
        ".read": "auth != null && (data.child('owner_uid').val() == auth.uid || data.child('owner_uid').val() == 'pending')",
        ".write": "auth != null && (data.child('owner_uid').val() == auth.uid || data.child('owner_uid').val() == 'pending' || !data.exists())",
        "stats": {
          ".write": "true"
        }
      }
    },
    "commands": {
      "$device_id": {
        "$command_id": {
          ".read": "auth != null",
          ".write": "auth != null"
        }
      }
    },
    "users": {
      "$uid": {
        ".read": "auth != null && auth.uid == $uid",
        ".write": "auth != null && auth.uid == $uid"
      }
    }
  }
}
